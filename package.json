{
	"name": "powerline",
	"main": "./lib/atom-tab-status-items",
	"version": "1.0.0",
	"description": "A short description of your package",
	"keywords": [],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/quarterto/atom-powerline.git"
	},
	"license": "Parity-7.0.0",
	"engines": {
		"atom": ">=1.0.0 <2.0.0"
	},
	"dependencies": {
		"@juggle/resize-observer": "^3.0.0-0",
		"etch": "^0.14.0"
	},
	"devDependencies": {
		"husky": "^2.3.0",
		"prettier": "^1.17.0",
		"eslint": "^5.16.0",
		"@quarterto/eslint-config": "^1.4.0",
		"@quarterto/prettier": "^1.1.0",
		"lint-staged": "^8.1.7"
	},
	"eslintConfig": {
		"extends": [
			"@quarterto"
		],
		"env": {
			"browser": true,
			"node": true
		},
		"globals": {
			"atom": "readonly"
		},
		"rules": {
			"react/no-unknown-property": [
				"error",
				{
					"ignore": "class"
				}
			]
		}
	},
	"prettier": "@quarterto/prettier",
	"lint-staged": {
		"*.{js,json}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"consumedServices": {
		"diagnostics-store": {
			"versions": {
				"0.3.0": "consumeDiagnosticUpdates"
			}
		},
		"atom.file-icons": {
			"versions": {
				"1.0.0": "consumeIcons"
			}
		}
	},
	"bugs": {
		"url": "https://github.com/quarterto/atom-powerline/issues"
	},
	"homepage": "https://github.com/quarterto/atom-powerline#readme",
	"directories": {
		"lib": "lib"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"author": "Bren Brightwell <bren@153.io>"
}
